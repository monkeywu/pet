body 
	background-image url('../image/pet_bg.png');
	background-size 120%
	background-attachment fixed
	background-repeat no-repeat
a
	transition all 0.4s
	&:hover
		text-decoration none
select
	appearance none
	-moz-appearance none
	-webkit-appearance none
	padding 10px 14px
	outline none
	background: url("http://ourjs.github.io/static/2015/arrow.png") no-repeat scroll right center transparent;
#map
	position fixed !important
	top 25%
	left -100%
	height 50%
	width 50%
	transition all 0.4s
.gomap:hover
		color #FFF
.close_map
	position fixed
	z-index 10
	top 25% 
	right 25%
	display none
	a
		border 1px solid #333
		color #333
		width 18px
		display inline-block
.header
	text-align center
	.descripe
		text-align right
		.img
			float left
			width 30%
			position relative
			top 100px
			left 35%
			img
				width 100%
				height auto
		h1
			margin-top 100px
			font-size 42px
		span 
			margin 20px 0
			font-size 18px
			font-weight bold
			display block
		p
			width 25%
			float right 
			text-align left
			font-size 21px
			transition all 0.3s
			padding 10px
			border-radius 20px
			&:hover
				background-color rgba(0,0,0,0.5)
				color #FFF
.step
	border 1px solid
	border-radius 20px
	background-color rgba(0,0,0,0.1)
	width 30%
	height 185px
	position relative
	left 5%
	margin 20px 20px 0 0
	transition all 0.4s
	&:hover
		background #111
		color #FFF
	a
		font-size 16px
		&:hover 
			color #FFF
.box
	text-align center
	margin-top 50px
	.btn
		width 150px
		height 150px
		border-radius 100%
		border 1px solid #111
		background-color #111
		color #FFF
		outline none
.list
	padding 50px 0 
.content
	text-align center
.placechoose
	padding 50px 0
	display none
	transition all 0.5s
.north,.center,.south,.other
	width 50%
	border 2px solid #111
	margin 30px auto
	display inline-block
	background-color rgba(0,0,0,0.1)
	border-radius 20px
	select
		margin-bottom 20px
.city
	display none
.choose
	width 50%
	border 2px solid #111
	border-radius 20px
	background-color rgba(0,0,0,0.1)
	margin 0 auto
	display none
	transition all 0.5s
	.section
		margin 30px 0 
		span
			margin-right 15px
			font-size 18px
.confirm
	display none
	margin-top 50px
	width 100px
	height 100px
	border-radius 100%
	border 1px solid #333
	background #333
	color rgba(255,255,255,0.8)
.list
	text-align center
	li
		width 40%
		display inline-block
		padding 0 15px
		border 1px solid #333
		margin 15px
		background-color rgba(0,0,0,0.5)
		color #FFF
		.top
			padding 100px
			background-size contain
			background-position center 
			background-repeat no-repeat
			margin-bottom 10px
		span
			display block
			margin-bottom 10px
.footer
	margin-top 100px
	height 100px
	background-color rgba(0,0,0,0.1)
	color #111
	text-align center
	font-size 16px
	span
		line-height 100px
		a
			color #111
			&:hover 
				color #FFF
				